<Window x:Class="JoyLeeBookWriter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="JoyLeeWrite" Height="600" Width="1000"
        Background="#F5F5F5"
        Icon="H:/C#Code/JoyLeeWrite/img/header_logo.png">
    <Window.Resources>
        <!-- Styles -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8E8E8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="#DDD" 
                                BorderThickness="1" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NewStoryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4"
                                Margin="5,2">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SelectedChapterStyle" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Background" Value="#E0E7FF"/>
            <Setter Property="Foreground" Value="#2563EB"/>
        </Style>

        <Style x:Key="AIButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#8B5CF6" Offset="0"/>
                        <GradientStop Color="#EC4899" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#8B5CF6" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="30" 
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#8B5CF6" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ToggleSidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F8F8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <DropShadowEffect x:Key="DropShadowEffect"
                  BlurRadius="10"
                  ShadowDepth="2"
                  Direction="270"
                  Color="#22000000" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Menu Bar -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Menu -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Image Source="H:/C#Code/JoyLeeWrite/img/logo.png" Height="80" Width="220" Margin="15,0,10,0" VerticalAlignment="Center"/>

                    <Button Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📄" Margin="0,0,5,0"/>
                            <TextBlock Text="File"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🏠" Margin="0,0,5,0"/>
                            <TextBlock Text="Home"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="❓" Margin="0,0,5,0"/>
                            <TextBlock Text="Help"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Editable Title -->
                <TextBox x:Name="TitleTextBox"
                 Grid.Column="1"
                 Text="Untitled Story"
                 FontSize="24"
                 FontWeight="Bold"
                 Foreground="#333"
                 Background="Transparent"
                 BorderThickness="0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 TextAlignment="Left"
                 Width="220"
                 Cursor="Arrow"
                 GotFocus="TitleTextBox_GotFocus"
                 LostFocus="TitleTextBox_LostFocus"
                 KeyDown="TitleTextBox_KeyDown"
                 />

                <!-- Settings Button -->
                <Button Grid.Column="2"
                Style="{StaticResource MenuButtonStyle}"
                Content="⚙️"
                FontSize="18"
                Margin="0,0,15,0"/>
            </Grid>
        </Border>


        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar -->
            <Border Grid.Column="0" Background="White"
        BorderBrush="#E0E0E0" BorderThickness="0,0,1,0"
        x:Name="SidebarBorder" Width="300">
                <DockPanel LastChildFill="True">
                    <!-- Header Top -->
                    <Border Padding="15,10,15,0"
                DockPanel.Dock="Top"
                BorderBrush="#E0E0E0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Toggle Button -->
                            <Button Style="{StaticResource ToggleSidebarButtonStyle}"
                        Grid.Column="1"
                        Width="40" Height="40"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Click="ToggleSidebar_Click">
                                <TextBlock Text="&lt;" x:Name="ToggleIcon"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Nội dung chính -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="15" x:Name="SidebarContent">
                            <Button Style="{StaticResource NewStoryButtonStyle}" Margin="0,10,0,15">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="+ " FontSize="16" Margin="0,0,5,0"/>
                                    <TextBlock Text="New Story"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource SidebarButtonStyle}" Margin="0,0,0,20">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="+ " FontSize="14" Margin="0,0,5,0"/>
                                    <TextBlock Text="New Chapter"/>
                                </StackPanel>
                            </Button>

                            <TextBlock Text="Stories"
                           FontSize="12"
                           Foreground="#999"
                           Margin="10,10,0,10"/>

                            <Button Style="{StaticResource SidebarButtonStyle}" Background="#E0E7FF" Foreground="#2563EB">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📖 " Margin="0,0,5,0"/>
                                    <TextBlock Text="Untitled Story 1"/>
                                </StackPanel>
                            </Button>

                            <StackPanel Margin="15,5,0,0">
                                <Button Style="{StaticResource SelectedChapterStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📄 " Margin="0,0,5,0"/>
                                        <TextBlock Text="Chapter 1"/>
                                    </StackPanel>
                                </Button>
                                <!-- Các Chapter khác -->
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </Border>


            <!-- Toggle Button when Sidebar is Closed -->
            <Button Style="{StaticResource ToggleSidebarButtonStyle}" 
                    Grid.Column="1"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Margin="10,10,0,0"
                    Click="ToggleSidebar_Click"
                    x:Name="ToggleButtonClosed"
                    Visibility="Collapsed">
                <TextBlock Text="&gt;"/>
            </Button>

            <!-- Right Panel: Toolbar + Editor -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Toolbar -->
                <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="15,10">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Style="{StaticResource ToolbarButtonStyle}" Content="B" FontWeight="Bold" Margin="5,0" Command="{Binding ToggleBoldCommand}" Focusable="False" IsTabStop="False"/>
                        <Button Style="{StaticResource ToolbarButtonStyle}" Content="I" FontStyle="Italic" Margin="5,0" Command="{Binding ToggleItalicCommand}" Focusable="False" IsTabStop="False"/>
                        <Button Style="{StaticResource ToolbarButtonStyle}" Margin="5,0" Command="{Binding ToggleUnderlineCommand}" Focusable="False" IsTabStop="False">
                            <TextBlock Text="U" TextDecorations="Underline"/>
                        </Button>
                        <Button Style="{StaticResource ToolbarButtonStyle}" Content="−" Margin="5,0" Command="{Binding ToggleDownSize}" Focusable="False" IsTabStop="False"/>
                        <TextBlock x:Name="FontSize" Text="16" VerticalAlignment="Center" Margin="10,0" FontSize="13"/>
                        <Button Style="{StaticResource ToolbarButtonStyle}" Content="+" Margin="5,0" Command="{Binding ToggleUpSize}" Focusable="False" IsTabStop="False"/>
                        <Button Style="{StaticResource ToolbarButtonStyle}" Content="🎨" Margin="10,0,5,0"/>
                        <Button Style="{StaticResource ToolbarButtonStyle}" ToolTip="Align Left" Command="{Binding ToggleAlignLeft}" Margin="5,0" Focusable="False" IsTabStop="False">
                            <Path Data="M0,0 L16,0 L16,2 L0,2 Z M0,5 L10,5 L10,7 L0,7 Z M0,10 L16,10 L16,12 L0,12 Z M0,15 L10,15 L10,17 L0,17 Z"
          Fill="#333" Width="18" Height="18" Stretch="Uniform" RenderTransformOrigin="0.529,0.5"/>
                        </Button>

                        <!-- Align Center -->
                        <Button Style="{StaticResource ToolbarButtonStyle}" ToolTip="Align Center" Command="{Binding ToggleAlignCenter}" Margin="5,0" Focusable="False" IsTabStop="False">
                            <Path Data="M3,0 L13,0 L13,2 L3,2 Z M0,5 L16,5 L16,7 L0,7 Z M3,10 L13,10 L13,12 L3,12 Z M0,15 L16,15 L16,17 L0,17 Z"
          Fill="#333" Width="18" Height="18" Stretch="Uniform"/>
                        </Button>

                        <!-- Align Right -->
                        <Button Style="{StaticResource ToolbarButtonStyle}" ToolTip="Align Right" Command="{Binding ToggleAlignRight}" Margin="5,0" Focusable="False" IsTabStop="False">
                            <Path Data="M0,0 L16,0 L16,2 L0,2 Z M6,5 L16,5 L16,7 L6,7 Z M0,10 L16,10 L16,12 L0,12 Z M6,15 L16,15 L16,17 L6,17 Z"
          Fill="#333" Width="18" Height="18" Stretch="Uniform"/>
                        </Button>

                        <!-- Align Justify -->
                        <Button Style="{StaticResource ToolbarButtonStyle}" ToolTip="Justify" Command="{Binding ToggleAlignJustify}" Margin="5,0" Focusable="False" IsTabStop="False">
                            <Path Data="M0,0 L16,0 L16,2 L0,2 Z M0,5 L16,5 L16,7 L0,7 Z M0,10 L16,10 L16,12 L0,12 Z M0,15 L16,15 L16,17 L0,17 Z"
          Fill="#333" Width="18" Height="18" Stretch="Uniform"/>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Editor Area -->
                <Border Grid.Row="1" Background="#F5F7FB">
                    <Grid>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <Grid>
                                <Border Background="#F8FBFF"
                        CornerRadius="6"
                        Margin="30,20,30,40"
                        Padding="25"
                        Effect="{DynamicResource DropShadowEffect}">
                                    <RichTextBox x:Name="EditorRichTextBox"
                                 FontSize="16"
                                 Foreground="#333"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="0"
                                 VerticalAlignment="Top"
                                 AcceptsReturn="True"
                                 GotFocus="EditorRichTextBox_GotFocus"
                                 LostFocus="EditorRichTextBox_LostFocus">
                                        <FlowDocument>
                                            <Paragraph>
                                                Start writing your story...
                                            </Paragraph>
                                        </FlowDocument>
                                    </RichTextBox>
                                </Border>
                            </Grid>
                        </ScrollViewer>

                        <!-- AI Assistant Floating Button -->
                        <Button Style="{StaticResource AIButtonStyle}"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,50,50"
                ToolTip="Ask AI"
                Click="AIButton_Click">
                            <TextBlock Text="✨" FontSize="26"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
<Page
    x:Class="JoyLeeWrite.Views.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JoyLeeWrite.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ProfilePage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Styles  -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Margin="3,5,3,5"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F3F4F6" />
                            </Trigger>
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="border" Property="Background" Value="#EFF8FF" />
                            </Trigger>
                            <DataTrigger Binding="{Binding ContextMenu.IsOpen, RelativeSource={RelativeSource Self}}" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EFF8FF" />
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#DDD"
                            BorderThickness="1"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="border" Property="Background" Value="#EFF8FF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NewStoryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2563EB" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="15,12" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#666" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="15,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Margin="5,2"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style
            x:Key="SelectedChapterStyle"
            BasedOn="{StaticResource SidebarButtonStyle}"
            TargetType="Button">
            <Setter Property="Background" Value="#E0E7FF" />
            <Setter Property="Foreground" Value="#2563EB" />
        </Style>

        <Style x:Key="AIButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#8B5CF6" />
                        <GradientStop Offset="1" Color="#EC4899" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="60" />
            <Setter Property="Height" Value="60" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="15"
                        Opacity="0.4"
                        ShadowDepth="0"
                        Color="#8B5CF6" />
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="30">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect
                                BlurRadius="20"
                                Opacity="0.6"
                                ShadowDepth="0"
                                Color="#8B5CF6" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ToggleSidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#DDD" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Width" Value="50" />
            <Setter Property="Height" Value="50" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F8F8" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <DropShadowEffect
            x:Key="DropShadowEffect"
            BlurRadius="10"
            Direction="270"
            ShadowDepth="2"
            Color="#22000000" />
        <Style x:Key="ModernContextMenu" TargetType="ContextMenu">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#E5E7EB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="HasDropShadow" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="16"
                                    Direction="270"
                                    Opacity="0.1"
                                    ShadowDepth="4"
                                    Color="#000000" />
                            </Border.Effect>
                            <StackPanel IsItemsHost="True" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Modern MenuItem Style  -->
        <Style x:Key="ModernMenuItem" TargetType="MenuItem">
            <Setter Property="Height" Value="36" />
            <Setter Property="Padding" Value="12,0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#1F2937" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border
                            x:Name="Border"
                            Margin="2"
                            Background="Transparent"
                            CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Icon  -->
                                <ContentPresenter
                                    Grid.Column="0"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    ContentSource="Icon" />

                                <!--  Header Text  -->
                                <ContentPresenter
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    ContentSource="Header"
                                    RecognizesAccessKey="True" />

                                <!--  Shortcut  -->
                                <TextBlock
                                    Grid.Column="2"
                                    Margin="24,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="#9CA3AF"
                                    Text="{TemplateBinding InputGestureText}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F3F4F6" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#D1D5DB" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Separator Style  -->
        <Style x:Key="ModernSeparator" TargetType="Separator">
            <Setter Property="Background" Value="#E5E7EB" />
            <Setter Property="Height" Value="1" />
            <Setter Property="Margin" Value="8,4" />
        </Style>
        <Style x:Key="Custombutton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="275" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#DDD"
                            BorderThickness="1"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="border" Property="Background" Value="#EFF8FF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="9*" />
        </Grid.RowDefinitions>

        <!--  Top Menu Bar  -->
        <Border
            Grid.Row="0"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="0,0,0,1">

            <Grid Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="5.5*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Left Logo  -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Image
                        x:Name="Logo"
                        Width="300"
                        Height="80"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Source="pack://application:,,,/Resources/img/logo.png" />
                </StackPanel>

                <!--  Toggle Sidebar Button  -->
                <Button
                    Grid.Column="1"
                    Width="25"
                    Height="25"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Click="ToggleSidebar_Click"
                    Style="{StaticResource ToggleSidebarButtonStyle}">
                    <Image
                        x:Name="SidebarIcon"
                        Width="20"
                        Height="20"
                        Source="pack://application:,,,/Resources/img/sidebar.png"
                        Stretch="Uniform" />
                </Button>

                <!--  Editable Title  -->
                <TextBlock
                    x:Name="TitleTextBox"
                    Grid.Column="2"
                    Margin="15,3,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    Cursor="Arrow"
                    FontSize="36"
                    FontWeight="Bold"
                    Foreground="#333"
                    Text="{Binding CurrentPageTitle}"
                    TextAlignment="Left" />

                <!--  Settings Button  -->

            </Grid>
        </Border>




        <!--  Main Content Area  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <!--  Left Sidebar  -->
            <Border
                x:Name="SidebarBorder"
                Width="300"
                Background="White"
                BorderBrush="#E5E7EB"
                BorderThickness="0,0,1,0">

                <!--  ✅ Dùng Grid thay vì DockPanel để cố định footer  -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <!--  Nội dung chính  -->
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <!--  PHẦN CHÍNH  -->
                    <ScrollViewer
                        x:Name="SidebarContent"
                        Grid.Row="1"
                        HorizontalScrollBarVisibility="Disabled"
                        VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,20,0,0">
                            <Button Command="{Binding NavigateToHomepageCommand}" Style="{StaticResource Custombutton}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="0,0,10,0" Text="📚" />
                                    <TextBlock Text="My Stories" />
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding NavigateToStaticspageCommand}" Style="{StaticResource Custombutton}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="0,0,10,0" Text="📊" />
                                    <TextBlock Text="Statistics" />
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding NavigateToProfilepageCommand}" Style="{StaticResource Custombutton}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="0,0,10,0" Text="⚙️" />
                                    <TextBlock Text="Settings" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                    <Button
                        x:Name="CreateSeriesButton"
                        Grid.Row="2"
                        Height="40"
                        Margin="0,15,0,0"
                        Background="#3B82F6"
                        BorderThickness="0"
                        Click="Create_Series"
                        Cursor="Hand"
                        Foreground="White"
                        Style="{StaticResource Custombutton}">
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBlock
                                Margin="0,4,10,0"
                                FontFamily="Segoe Fluent Icons"
                                FontSize="14"
                                Text="&#xE710;" />
                            <TextBlock
                                FontSize="14"
                                FontWeight="SemiBold"
                                Text="New Series" />
                        </StackPanel>
                    </Button>
                    <!--  FOOTER AUTHOR  -->
                    <Border
                        x:Name="AuthorInfoBorder"
                        Grid.Row="3"
                        Margin="0,0,0,10"
                        Padding="15"
                        BorderBrush="#E5E7EB"
                        BorderThickness="0,1,0,0">
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <!--  Avatar  -->
                            <Border
                                Width="36"
                                Height="36"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="#3B82F6"
                                CornerRadius="18">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="A" />
                            </Border>

                            <!--  Author Info  -->
                            <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="#111"
                                    Text="{Binding Username}" />
                                <!--  <TextBlock
FontSize="12"
Foreground="#6B7280"
Text="author@email.com" />-->
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <Button
                x:Name="ToggleButtonClosed"
                Grid.Column="1"
                Margin="10,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="ToggleSidebar_Click"
                Style="{StaticResource ToggleSidebarButtonStyle}"
                Visibility="Collapsed">
                <TextBlock Text="&gt;" />
            </Button>

            <ScrollViewer
                Grid.Column="1"
                Padding="30,20,30,40"
                Background="#F9FAFB"
                VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,0,0,20" Orientation="Vertical">
                    <local:ProfileDetailView DataContext="{Binding ProfileDetailVM}" DockPanel.Dock="Top" />
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>

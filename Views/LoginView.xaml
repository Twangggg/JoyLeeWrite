<Page
    x:Class="JoyLeeWrite.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JoyLeeWrite.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utils="clr-namespace:JoyLeeWrite.Utils"
    xmlns:vm="clr-namespace:JoyLeeWrite.ViewModels"
    Title="LoginView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:AuthViewModel />
    </Page.DataContext>
    <Page.Resources>
        <!--  Style cho TextBox  -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="5,8" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2B7DE9" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  Style cho PasswordBox  -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="5,12" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2B7DE9" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  Style cho Button chính  -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2B7DE9" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="20,20" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E5FC4" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  Style cho Button phụ  -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#2B7DE9" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#1E5FC4" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  Style cho Tab Button  -->
        <Style x:Key="TabButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#666666" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="0,0,0,10" />
            <Setter Property="BorderThickness" Value="0,0,0,3" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style
            x:Key="ActiveTabButton"
            BasedOn="{StaticResource TabButton}"
            TargetType="Button">
            <Setter Property="Foreground" Value="#2B7DE9" />
            <Setter Property="BorderBrush" Value="#2B7DE9" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="500" />
        </Grid.ColumnDefinitions>

        <!--  Left Side - Branding  -->
        <Grid Grid.Column="0" Background="#F8F9FA">
            <StackPanel
                Margin="60,60,60,60"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
                <!--  Logo  -->
                <Image
                    Width="240"
                    Height="240"
                    Source="pack://application:,,,/Resources/img/logo.png" />

                <!--  Tagline  -->
                <TextBlock
                    Margin="0,0,0,20"
                    FontSize="36"
                    FontWeight="Light"
                    Foreground="#666666"
                    Text="Write Your Story"
                    TextAlignment="Center" />

                <!--  Description  -->
                <TextBlock
                    MaxWidth="450"
                    FontSize="24"
                    Foreground="#999999"
                    LineHeight="26"
                    Text="Create a platform and share your story with the literature-loving community"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
            </StackPanel>
        </Grid>

        <!--  Right Side - Login/Register Form  -->
        <Border
            Grid.Column="1"
            Padding="60,40"
            Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Tab Headers  -->
                <Grid Grid.Row="0" Margin="0,0,0,40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        x:Name="LoginTab"
                        Grid.Column="0"
                        Click="LoginTab_Click"
                        Content="Login"
                        Style="{StaticResource ActiveTabButton}" />
                    <Button
                        x:Name="RegisterTab"
                        Grid.Column="1"
                        Click="RegisterTab_Click"
                        Content="Register"
                        Style="{StaticResource TabButton}" />
                </Grid>

                <!--  Login Form  -->
                <StackPanel
                    x:Name="LoginForm"
                    Grid.Row="1"
                    Visibility="Visible">
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="#333333"
                        Text="Welcome back!" />
                    <TextBlock
                        Margin="0,0,0,35"
                        FontSize="14"
                        Foreground="#999999"
                        Text="Login to continue" />

                    <!--  Email  -->
                    <TextBlock
                        Margin="0,0,0,8"
                        FontSize="14"
                        FontWeight="Medium"
                        Foreground="#333333"
                        Text="Username" />
                    <TextBox
                        x:Name="LoginEmail"
                        Margin="0,0,0,20"
                        Style="{StaticResource ModernTextBox}"
                        Text="{Binding Username}" />

                    <!--  Password  -->
                    <TextBlock
                        Margin="0,0,0,8"
                        FontSize="14"
                        FontWeight="Medium"
                        Foreground="#333333"
                        Text="Password" />
                    <PasswordBox
                        x:Name="LoginPassword"
                        Margin="0,0,0,10"
                        utils:PasswordHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource ModernPasswordBox}" />

                    
                    <Button
                        Margin="0,0,0,30"
                        HorizontalAlignment="Right"
                        Click="ForgotPassword_Click"
                        Content="Forgot your password?"
                        Style="{StaticResource SecondaryButton}" />

                    <!--  Login Button  -->
                    <Button
                        Height="35"
                        Margin="0,0,0,20"
                        Command="{Binding LoginCommand}"
                        Content="Login"
                        Style="{StaticResource PrimaryButton}" />



                </StackPanel>

                <!--  Register Form  -->
                <StackPanel
                    x:Name="RegisterForm"
                    Grid.Row="1"
                    Visibility="Collapsed">
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="#333333"
                        Text="Create your account" />
                    <TextBlock
                        Margin="0,0,0,35"
                        FontSize="14"
                        Foreground="#999999"
                        Text="Start your creative journey" />

                    <!--  Username  -->
                    <TextBlock
                        Margin="0,0,0,8"
                        FontSize="14"
                        FontWeight="Medium"
                        Foreground="#333333"
                        Text="Username" />
                    <TextBox
                        x:Name="RegisterUsername"
                        Margin="0,0,0,20"
                        Style="{StaticResource ModernTextBox}"
                        Text="{Binding RegisterUsername}" />

                    <!--  Password  -->
                    <TextBlock
                        Margin="0,0,0,8"
                        FontSize="14"
                        FontWeight="Medium"
                        Foreground="#333333"
                        Text="Password" />
                    <PasswordBox
                        x:Name="RegisterPassword"
                        Margin="0,0,0,20"
                        utils:PasswordHelper.BoundPassword="{Binding RegisterPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource ModernPasswordBox}" />

                    <!--  Confirm Password  -->
                    <TextBlock
                        Margin="0,0,0,8"
                        FontSize="14"
                        FontWeight="Medium"
                        Foreground="#333333"
                        Text="Confirm Password" />
                    <PasswordBox
                        x:Name="RegisterConfirmPassword"
                        Margin="0,0,0,25"
                        utils:PasswordHelper.BoundPassword="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource ModernPasswordBox}" />

                    <!--  Register Button  -->
                    <Button
                        Height="35"
                        Margin="0,0,0,20"
                        Command="{Binding RegisterCommand}"
                        Content="Register"
                        Style="{StaticResource PrimaryButton}" />

                    <!--  Terms  -->
                    <TextBlock
                        FontSize="12"
                        Foreground="#999999"
                        LineHeight="18"
                        TextAlignment="Center"
                        TextWrapping="Wrap">
                        By registering, you agree to<Hyperlink Foreground="#2B7DE9"> Terms of Service</Hyperlink>
                        and<Hyperlink Foreground="#2B7DE9"> Privacy Policy</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>

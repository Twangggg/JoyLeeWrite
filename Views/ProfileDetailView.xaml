<UserControl
    x:Class="JoyLeeWrite.Views.ProfileDetailView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JoyLeeWrite.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#333" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="15,10" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8E8E8" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="20,10" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A7BC8" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#DDD" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <!--  Header  -->
        <TextBlock
            Margin="0,10,0,5"
            FontSize="32"
            FontWeight="Bold"
            Text="Setting" />
        <TextBlock
            Margin="0,0,0,30"
            FontSize="14"
            Foreground="#666"
            Text="Manage your information and configure" />

        <!--  Profile Settings Card  -->
        <Border
            Margin="0,0,0,20"
            Padding="30"
            Background="White"
            CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="20"
                    Opacity="0.08"
                    ShadowDepth="0"
                    Color="Black" />
            </Border.Effect>
            <StackPanel>

                <!--  Header  -->
                <TextBlock
                    Margin="0,0,0,5"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Text="👤 Author Profile" />
                <TextBlock
                    Margin="0,0,0,25"
                    FontSize="13"
                    Foreground="#666"
                    Text="Your personal information" />

                <!--  Avatar  -->
                <StackPanel Margin="0,0,0,25" Orientation="Horizontal">
                    <Border
                        Width="64"
                        Height="64"
                        Margin="0,0,15,0"
                        Background="#4A90E2"
                        CornerRadius="32">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="A" />
                    </Border>
                    <Button
                        VerticalAlignment="Center"
                        Background="#F0F0F0"
                        Content="Change your avatar"
                        Style="{StaticResource MenuButtonStyle}" />
                </StackPanel>

                <!--  Username  -->
                <TextBlock
                    Margin="0,0,0,0"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Text="User name" />
                <TextBox
                    Height="42"
                    Margin="10,0,10,0"
                    VerticalContentAlignment="Center"
                    Text="{Binding Username}" />

                <Grid Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="140" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,0,5"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Text="Email" />

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="2"
                        Margin="0,0,0,5"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Text="OTP" />

                    <TextBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Height="42"
                        Margin="10,0,10,0"
                        VerticalContentAlignment="Center"
                        Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

                    <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="42"
                        Margin="0,0,10,0"
                        Command="{Binding SendOtpCommand}"
                        Content="Send OTP"
                        Style="{StaticResource PrimaryButtonStyle}" />


                    <TextBox
                        Grid.Row="1"
                        Grid.Column="2"
                        Height="42"
                        Margin="20,0,10,0"
                        VerticalContentAlignment="Center"
                        Text="{Binding OtpInput}" />

                    <Button
                        Grid.Row="1"
                        Grid.Column="3"
                        Height="42"
                        Command="{Binding VerifyOtpCommand}"
                        Content="Verify Email"
                        Style="{StaticResource PrimaryButtonStyle}" />
                </Grid>

                <!--  Save button  -->
                <Button
                    HorizontalAlignment="Left"
                    Command="{Binding SaveProfileCommand}"
                    Content="Save change"
                    Style="{StaticResource PrimaryButtonStyle}" />
            </StackPanel>
        </Border>

        <!--  Notifications Card  -->
        <Border
            Margin="0,0,0,20"
            Padding="30"
            Background="White"
            CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="20"
                    Opacity="0.08"
                    ShadowDepth="0"
                    Color="Black" />
            </Border.Effect>
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,5"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Text="🔔 Notification" />
                <TextBlock
                    Margin="0,0,0,25"
                    FontSize="13"
                    Foreground="#666"
                    Text="Manage Notifications" />

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="Remind Writing Series" />
                        <TextBlock
                            Margin="0,2,0,0"
                            FontSize="12"
                            Foreground="#666"
                            Text="Get daily reminders to write" />
                    </StackPanel>
                    <CheckBox
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        IsChecked="True" />
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="Weekly Report" />
                        <TextBlock
                            Margin="0,2,0,0"
                            FontSize="12"
                            Foreground="#666"
                            Text="Get weekly statistics" />
                    </StackPanel>
                    <CheckBox
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        IsChecked="False" />
                </Grid>
            </StackPanel>
        </Border>

        <!--  Interface Settings Card  -->
        <Border
            Margin="0,0,0,20"
            Padding="30"
            Background="White"
            CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="20"
                    Opacity="0.08"
                    ShadowDepth="0"
                    Color="Black" />
            </Border.Effect>
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,5"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Text="🎨 Display" />
                <TextBlock
                    Margin="0,0,0,25"
                    FontSize="13"
                    Foreground="#666"
                    Text="Customize the application interface" />

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="Dark Mode" />
                        <TextBlock
                            Margin="0,2,0,0"
                            FontSize="12"
                            Foreground="#666"
                            Text="Enable dark mode for the interface" />
                    </StackPanel>
                    <CheckBox
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        IsChecked="False" />
                </Grid>
            </StackPanel>
        </Border>

        <!--  Language Settings Card  -->
        <Border
            Padding="30"
            Background="White"
            CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="20"
                    Opacity="0.08"
                    ShadowDepth="0"
                    Color="Black" />
            </Border.Effect>
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,5"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Text="🌐 Language" />
                <TextBlock
                    Margin="0,0,0,25"
                    FontSize="13"
                    Foreground="#666"
                    Text="Select display language" />

                <TextBlock
                    Margin="0,0,0,8"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Text="Language" />
                <ComboBox
                    Height="40"
                    Background="White"
                    BorderBrush="#DDD"
                    BorderThickness="1"
                    FontSize="14"
                    SelectedIndex="0">
                    <ComboBoxItem Content="Tiếng Việt" />
                    <ComboBoxItem Content="English" />
                    <ComboBoxItem Content="中文" />
                    <ComboBoxItem Content="日本語" />
                </ComboBox>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>

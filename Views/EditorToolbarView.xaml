<UserControl
    x:Class="JoyLeeWrite.Views.EditorToolbarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Height="65">
    <UserControl.Resources>
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#DDD"
                            BorderThickness="1"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="border" Property="Background" Value="#EFF8FF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ColorButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#CCCCCC" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Focusable" Value="False" />
            <Setter Property="IsTabStop" Value="False" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <!--  Hover effect  -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#333333" />
                                <Setter TargetName="border" Property="BorderThickness" Value="2" />
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect
                                            BlurRadius="8"
                                            Opacity="0.4"
                                            ShadowDepth="2"
                                            Color="Black" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!--  Pressed effect  -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Border
        Grid.Row="0"
        Padding="15,10"
        Background="White"
        BorderBrush="#E0E0E0"
        BorderThickness="0,0,0,1">
        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
            <Button
                Margin="5,0"
                Command="{Binding ToggleBoldCommand}"
                Content="B"
                Focusable="False"
                FontWeight="Bold"
                IsTabStop="False"
                Style="{StaticResource ToolbarButtonStyle}" />
            <Button
                Margin="5,0"
                Command="{Binding ToggleItalicCommand}"
                Content="I"
                Focusable="False"
                FontStyle="Italic"
                IsTabStop="False"
                Style="{StaticResource ToolbarButtonStyle}" />
            <Button
                Margin="5,0"
                Command="{Binding ToggleUnderlineCommand}"
                Focusable="False"
                IsTabStop="False"
                Style="{StaticResource ToolbarButtonStyle}">
                <TextBlock Text="U" TextDecorations="Underline" />
            </Button>
            <Button
                Margin="5,0"
                Command="{Binding DownSizeCommand}"
                Content="−"
                Focusable="False"
                IsTabStop="False"
                Style="{StaticResource ToolbarButtonStyle}" />
            <TextBlock
                x:Name="FontSize"
                Margin="10,0"
                VerticalAlignment="Center"
                FontSize="13"
                Text="{Binding SelectedFontSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Margin="5,0"
                Command="{Binding UpSizeCommand}"
                Content="+"
                Focusable="False"
                IsTabStop="False"
                Style="{StaticResource ToolbarButtonStyle}" />
            <Grid>
                <!--  Nút màu  -->
                <Button
                    x:Name="ColorButton"
                    Width="40"
                    Height="40"
                    Click="ColorButton_Click"
                    Content="🎨"
                    Focusable="False"
                    IsTabStop="False"
                    Style="{StaticResource ToolbarButtonStyle}"
                    ToolTip="Chọn màu chữ" />
                <!--  Popup chọn màu  -->
                <Popup
                    x:Name="ColorPopup"
                    AllowsTransparency="True"
                    Focusable="False"
                    Placement="Bottom"
                    PlacementTarget="{Binding ElementName=ColorButton}"
                    PopupAnimation="Fade"
                    StaysOpen="False">
                    <Border
                        Padding="10"
                        Background="White"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        CornerRadius="8"
                        Focusable="False">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="10"
                                Opacity="0.3"
                                ShadowDepth="2"
                                Color="Black" />
                        </Border.Effect>
                        <StackPanel>
                            <!--  Tiêu đề  -->
                            <TextBlock
                                Margin="0,0,0,8"
                                Focusable="False"
                                FontWeight="SemiBold"
                                Foreground="#333333"
                                Text="Chọn màu" />
                            <!--  Color Picker chính  -->
                            <xctk:ColorPicker
                                x:Name="MainColorPicker"
                                Width="200"
                                Height="30"
                                DisplayColorAndName="True"
                                Focusable="False"
                                IsTabStop="False"
                                SelectedColor="{Binding SelectedFontColor, Mode=TwoWay}"
                                ShowRecentColors="True"
                                ShowStandardColors="True"
                                UsingAlphaChannel="False" />
                            <!--  Màu nhanh  -->
                            <TextBlock
                                Margin="0,10,0,5"
                                Focusable="False"
                                FontSize="11"
                                Foreground="#666666"
                                Text="Màu thường dùng" />
                            <UniformGrid
                                Margin="0,0,0,5"
                                Columns="5"
                                Rows="2">
                                <Button
                                    Width="30"
                                    Height="30"
                                    Margin="2"
                                    Background="Black"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    Click="QuickColor_Click"
                                    Focusable="False"
                                    IsTabStop="False"
                                    Style="{StaticResource ColorButtonStyle}"
                                    Tag="#000000"
                                    ToolTip="Đen" />
                                <Button
                                    Width="30"
                                    Height="30"
                                    Margin="2"
                                    Background="Red"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    Click="QuickColor_Click"
                                    Focusable="False"
                                    IsTabStop="False"
                                    Style="{StaticResource ColorButtonStyle}"
                                    Tag="#FF0000"
                                    ToolTip="Đỏ" />
                                <Button
                                    Width="30"
                                    Height="30"
                                    Margin="2"
                                    Background="Blue"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    Click="QuickColor_Click"
                                    Focusable="False"
                                    IsTabStop="False"
                                    Style="{StaticResource ColorButtonStyle}"
                                    Tag="#0000FF"
                                    ToolTip="Xanh dương" />
                                <Button
                                    Width="30"
                                    Height="30"
                                    Margin="2"
                                    Background="Green"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    Click="QuickColor_Click"
                                    Focusable="False"
                                    IsTabStop="False"
                                    Style="{StaticResource ColorButtonStyle}"
                                    Tag="#008000"
                                    ToolTip="Xanh lá" />
                                <Button
                                    Width="30"
                                    Height="30"
                                    Margin="2"
                                    Background="Orange"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    Click="QuickColor_Click"
                                    Focusable="False"
                                    IsTabStop="False"
                                    Style="{StaticResource ColorButtonStyle}"
                                    Tag="#FFA500"
                                    ToolTip="Cam" />
                                <Button
                                    Width="30"
                                    Height="30"
                                    Margin="2"
                                    Background="Purple"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    Click="QuickColor_Click"
                                    Focusable="False"
                                    IsTabStop="False"
                                    Style="{StaticResource ColorButtonStyle}"
                                    Tag="#800080"
                                    ToolTip="Tím" />
                                <Button
                                    Width="30"
                                    Height="30"
                                    Margin="2"
                                    Background="Brown"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    Click="QuickColor_Click"
                                    Focusable="False"
                                    IsTabStop="False"
                                    Style="{StaticResource ColorButtonStyle}"
                                    Tag="#A52A2A"
                                    ToolTip="Nâu" />
                                <Button
                                    Width="30"
                                    Height="30"
                                    Margin="2"
                                    Background="Pink"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    Click="QuickColor_Click"
                                    Focusable="False"
                                    IsTabStop="False"
                                    Style="{StaticResource ColorButtonStyle}"
                                    Tag="#FFC0CB"
                                    ToolTip="Hồng" />
                                <Button
                                    Width="30"
                                    Height="30"
                                    Margin="2"
                                    Background="Gray"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    Click="QuickColor_Click"
                                    Focusable="False"
                                    IsTabStop="False"
                                    Style="{StaticResource ColorButtonStyle}"
                                    Tag="#808080"
                                    ToolTip="Xám" />
                                <Button
                                    Width="30"
                                    Height="30"
                                    Margin="2"
                                    Background="Gold"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    Click="QuickColor_Click"
                                    Focusable="False"
                                    IsTabStop="False"
                                    Style="{StaticResource ColorButtonStyle}"
                                    Tag="#FFD700"
                                    ToolTip="Vàng" />
                            </UniformGrid>
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>
            <Button
                Margin="5,0"
                Command="{Binding AlignLeftCommand}"
                Focusable="False"
                IsTabStop="False"
                Style="{StaticResource ToolbarButtonStyle}"
                ToolTip="Align Left">
                <Path
                    Width="18"
                    Height="18"
                    Data="M0,0 L16,0 L16,2 L0,2 Z M0,5 L10,5 L10,7 L0,7 Z M0,10 L16,10 L16,12 L0,12 Z M0,15 L10,15 L10,17 L0,17 Z"
                    Fill="#333"
                    RenderTransformOrigin="0.529,0.5"
                    Stretch="Uniform" />
            </Button>
            <!--  Align Center  -->
            <Button
                Margin="5,0"
                Command="{Binding AlignCenterCommand}"
                Focusable="False"
                IsTabStop="False"
                Style="{StaticResource ToolbarButtonStyle}"
                ToolTip="Align Center">
                <Path
                    Width="18"
                    Height="18"
                    Data="M3,0 L13,0 L13,2 L3,2 Z M0,5 L16,5 L16,7 L0,7 Z M3,10 L13,10 L13,12 L3,12 Z M0,15 L16,15 L16,17 L0,17 Z"
                    Fill="#333"
                    Stretch="Uniform" />
            </Button>
            <!--  Align Right  -->
            <Button
                Margin="5,0"
                Command="{Binding AlignRightCommand}"
                Focusable="False"
                IsTabStop="False"
                Style="{StaticResource ToolbarButtonStyle}"
                ToolTip="Align Right">
                <Path
                    Width="18"
                    Height="18"
                    Data="M0,0 L16,0 L16,2 L0,2 Z M6,5 L16,5 L16,7 L6,7 Z M0,10 L16,10 L16,12 L0,12 Z M6,15 L16,15 L16,17 L6,17 Z"
                    Fill="#333"
                    Stretch="Uniform" />
            </Button>
            <!--  Align Justify  -->
            <Button
                Margin="5,0"
                Command="{Binding AlignJustifyCommand}"
                Focusable="False"
                IsTabStop="False"
                Style="{StaticResource ToolbarButtonStyle}"
                ToolTip="Justify">
                <Path
                    Width="18"
                    Height="18"
                    Data="M0,0 L16,0 L16,2 L0,2 Z M0,5 L16,5 L16,7 L0,7 Z M0,10 L16,10 L16,12 L0,12 Z M0,15 L16,15 L16,17 L0,17 Z"
                    Fill="#333"
                    Stretch="Uniform" />
            </Button>
        </StackPanel>
    </Border>
</UserControl>

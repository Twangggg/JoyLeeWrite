<Page x:Class="JoyLeeWrite.Views.AuthorProfileView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1400"
      Background="#F5F5F5"
      Title="Settings">

    <Page.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8E8E8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A7BC8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar -->
        <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <DockPanel>
                <!-- Logo -->
                <TextBlock DockPanel.Dock="Top"
                          Text="JoyLeeWrite" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="#4A90E2"
                          Margin="20,20,20,30"/>

                <!-- User Profile -->
                <Border DockPanel.Dock="Bottom"
                       Margin="10,10,10,20" 
                       Background="#F8F8F8" 
                       CornerRadius="8" 
                       Padding="10">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="36" Height="36" 
                               Background="#4A90E2" 
                               CornerRadius="18"
                               Margin="0,0,10,0">
                            <TextBlock Text="A" 
                                     Foreground="White" 
                                     FontSize="16" 
                                     FontWeight="Bold"
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Author Name" FontWeight="SemiBold" FontSize="12"/>
                            <TextBlock Text="author@email.com" FontSize="10" Foreground="#666"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Menu Items -->
                <StackPanel Margin="10,0">
                    <Button Style="{StaticResource MenuButtonStyle}" Margin="0,5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="My Stories" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MenuButtonStyle}" Margin="0,5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📈" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Statistics" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MenuButtonStyle}" Margin="0,5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙️" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Settings" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="0,20,0,0"
                            HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="+ " FontSize="14" FontWeight="Bold"/>
                            <TextBlock Text="New Series" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,30">
                <!-- Header -->
                <DockPanel Margin="0,0,0,5">
                    <TextBlock Text="Dashboard" 
                             FontSize="14" 
                             Foreground="#666"
                             VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Right"
                              DockPanel.Dock="Right">
                        <Button Content="🔔 Hỗ Sợ" 
                              Style="{StaticResource MenuButtonStyle}"
                              Margin="0,0,10,0"/>
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <TextBlock Text="⚙️" FontSize="16"/>
                        </Button>
                        <Border Width="32" Height="32" 
                               Background="#4A90E2" 
                               CornerRadius="16"
                               Margin="10,0,0,0">
                            <TextBlock Text="A" 
                                     Foreground="White" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </DockPanel>

                <TextBlock Text="Cài Đặt" 
                         FontSize="32" 
                         FontWeight="Bold"
                         Margin="0,10,0,5"/>
                <TextBlock Text="Quản lý thông tin và tùy chọn của bạn" 
                         FontSize="14" 
                         Foreground="#666"
                         Margin="0,0,0,30"/>

                <!-- Profile Settings Card -->
                <Border Background="White" 
                       CornerRadius="12" 
                       Padding="30"
                       Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" 
                                        ShadowDepth="0" 
                                        Opacity="0.08" 
                                        Color="Black"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="👤 Hồ Sơ Tác Giả" 
                                 FontSize="18" 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,5"/>
                        <TextBlock Text="Thông tin cá nhân của bạn" 
                                 FontSize="13" 
                                 Foreground="#666"
                                 Margin="0,0,0,25"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                            <Border Width="64" Height="64" 
                                   Background="#4A90E2" 
                                   CornerRadius="32"
                                   Margin="0,0,15,0">
                                <TextBlock Text="A" 
                                         Foreground="White" 
                                         FontSize="28" 
                                         FontWeight="Bold"
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"/>
                            </Border>
                            <Button Content="Thay Đổi Ảnh" 
                                  Style="{StaticResource MenuButtonStyle}"
                                  Background="#F0F0F0"
                                  VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Text="Tên Tác Giả" 
                                 FontSize="13" 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="Author" 
                               Style="{StaticResource ModernTextBox}"
                               Margin="0,0,0,20"/>

                        <TextBlock Text="Email" 
                                 FontSize="13" 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="author@example.com" 
                               Style="{StaticResource ModernTextBox}"
                               Margin="0,0,0,20"/>

                        <TextBlock Text="Giới Thiệu" 
                                 FontSize="13" 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="Viết vài dòng về bạn..." 
                               Style="{StaticResource ModernTextBox}"
                               Height="100"
                               TextWrapping="Wrap"
                               AcceptsReturn="True"
                               VerticalScrollBarVisibility="Auto"
                               Margin="0,0,0,20"/>

                        <Button Content="Lưu Thay Đổi" 
                              Style="{StaticResource PrimaryButtonStyle}"
                              HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Notifications Card -->
                <Border Background="White" 
                       CornerRadius="12" 
                       Padding="30"
                       Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" 
                                        ShadowDepth="0" 
                                        Opacity="0.08" 
                                        Color="Black"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="🔔 Thông Báo" 
                                 FontSize="18" 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,5"/>
                        <TextBlock Text="Quản lý các loại nhận thông báo" 
                                 FontSize="13" 
                                 Foreground="#666"
                                 Margin="0,0,0,25"/>

                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Email Thông Báo" 
                                         FontSize="14" 
                                         FontWeight="SemiBold"/>
                                <TextBlock Text="Nhận email về bình luận và lượt thích" 
                                         FontSize="12" 
                                         Foreground="#666"
                                         Margin="0,2,0,0"/>
                            </StackPanel>
                            <CheckBox Grid.Column="1" 
                                    IsChecked="True"
                                    VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Nhắc Nhở Viết" 
                                         FontSize="14" 
                                         FontWeight="SemiBold"/>
                                <TextBlock Text="Nhận nhắc nhở hằng ngày để viết" 
                                         FontSize="12" 
                                         Foreground="#666"
                                         Margin="0,2,0,0"/>
                            </StackPanel>
                            <CheckBox Grid.Column="1" 
                                    IsChecked="True"
                                    VerticalAlignment="Center"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Báo Cáo Tuần" 
                                         FontSize="14" 
                                         FontWeight="SemiBold"/>
                                <TextBlock Text="Nhận thống kê hằng tuần" 
                                         FontSize="12" 
                                         Foreground="#666"
                                         Margin="0,2,0,0"/>
                            </StackPanel>
                            <CheckBox Grid.Column="1" 
                                    IsChecked="False"
                                    VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Interface Settings Card -->
                <Border Background="White" 
                       CornerRadius="12" 
                       Padding="30"
                       Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" 
                                        ShadowDepth="0" 
                                        Opacity="0.08" 
                                        Color="Black"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="🎨 Giao Diện" 
                                 FontSize="18" 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,5"/>
                        <TextBlock Text="Tùy chỉnh giao diện ứng dụng" 
                                 FontSize="13" 
                                 Foreground="#666"
                                 Margin="0,0,0,25"/>

                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Chế Độ Tối" 
                                         FontSize="14" 
                                         FontWeight="SemiBold"/>
                                <TextBlock Text="Bật chế độ tối cho giao diện" 
                                         FontSize="12" 
                                         Foreground="#666"
                                         Margin="0,2,0,0"/>
                            </StackPanel>
                            <CheckBox Grid.Column="1" 
                                    IsChecked="False"
                                    VerticalAlignment="Center"/>
                        </Grid>

                        <TextBlock Text="Kích Thước Chữ" 
                                 FontSize="14" 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="16" 
                               Style="{StaticResource ModernTextBox}"
                               Width="100"
                               HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Language Settings Card -->
                <Border Background="White" 
                       CornerRadius="12" 
                       Padding="30">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" 
                                        ShadowDepth="0" 
                                        Opacity="0.08" 
                                        Color="Black"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="🌐 Ngôn Ngữ" 
                                 FontSize="18" 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,5"/>
                        <TextBlock Text="Chọn ngôn ngữ hiển thị" 
                                 FontSize="13" 
                                 Foreground="#666"
                                 Margin="0,0,0,25"/>

                        <TextBlock Text="Ngôn Ngữ" 
                                 FontSize="14" 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <ComboBox SelectedIndex="0"
                                Height="40"
                                FontSize="14"
                                Background="White"
                                BorderBrush="#DDD"
                                BorderThickness="1">
                            <ComboBoxItem Content="Tiếng Việt"/>
                            <ComboBoxItem Content="English"/>
                            <ComboBoxItem Content="中文"/>
                            <ComboBoxItem Content="日本語"/>
                        </ComboBox>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
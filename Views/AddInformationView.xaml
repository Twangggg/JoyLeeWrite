<UserControl
    x:Class="JoyLeeWrite.Views.AddInformationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JoyLeeWrite.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    d:DesignHeight="1040"
    d:DesignWidth="1960"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DropShadowEffect
            x:Key="DropShadowEffect"
            BlurRadius="10"
            Direction="270"
            ShadowDepth="2"
            Color="#22000000" />
        <!--  Style cho TextBox  -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="BorderBrush" Value="#CCCCCC" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="White" />
        </Style>

        <!--  Style cho ComboBox  -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="BorderBrush" Value="#CCCCCC" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="White" />
        </Style>

        <!--  Style cho Button  -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1E3A5F" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="30,10" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A4A6F" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="30,10" />
            <Setter Property="BorderBrush" Value="#CCCCCC" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border
        Height="600"
        Padding="0"
        BorderBrush="#E0E0E0"
        BorderThickness="3"
        CornerRadius="6">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Left Panel - Upload Area  -->
            <Border
                Grid.Column="0"
                Margin="13,65,0,245"
                Background="#F8F9FA"
                BorderBrush="#DDDDDD"
                BorderThickness="1,1,1,1"
                CornerRadius="4,4,4,4">
                <StackPanel
                    Margin="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top">
                    <!--  Upload Icon  -->
                    <Border
                        Width="120"
                        Height="120"
                        Margin="0,30,0,0"
                        Background="White"
                        BorderBrush="#CCCCCC"
                        BorderThickness="2"
                        CornerRadius="4"
                        Cursor="Hand"
                        MouseLeftButtonDown="UploadArea_Click">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0F0F0" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Path
                            Width="50"
                            Height="50"
                            Data="M12,2 L12,14 M12,2 L8,6 M12,2 L16,6 M2,14 L22,14"
                            Stretch="Uniform"
                            Stroke="#999999"
                            StrokeLineJoin="Round"
                            StrokeThickness="2" />
                    </Border>

                    <TextBlock
                        Margin="0,15,0,0"
                        FontSize="11"
                        Foreground="#666666"
                        Text="Click to upload or drag and drop"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />

                    <Button
                        Margin="0,10,0,0"
                        Padding="20,8"
                        Background="#E8E8E8"
                        BorderThickness="0"
                        Click="ChooseFile_Click"
                        Content="Choose File"
                        Cursor="Hand"
                        FontSize="12"
                        Foreground="#333333">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Padding="{TemplateBinding Padding}"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="3">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>

            <!--  Right Panel - Form  -->
            <ScrollViewer
                Grid.Column="1"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="40,30,40,30">

                    <!--  Series Title  -->
                    <Label
                        Margin="0,0,0,8"
                        Content="Series Title * (Maximum 50 characters)"
                        FontSize="13"
                        FontWeight="Medium"
                        Foreground="#333333" />
                    <TextBox
                        x:Name="TitleTextBox"
                        Height="40"
                        VerticalContentAlignment="Center"
                        MaxLength="50"
                        Style="{StaticResource ModernTextBox}"
                        Text="Enter Title" />

                    <!--  Genre and Status Row  -->
                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Genre  -->
                        <StackPanel Grid.Column="0">
                            <Label
                                Margin="0,0,0,8"
                                Content="Genre *"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="#333333" />
                            <ComboBox
                                x:Name="CategoryComboBox"
                                Height="40"
                                VerticalContentAlignment="Center"
                                IsEditable="True"
                                IsReadOnly="True"
                                ItemsSource="{Binding Categories}"
                                SelectionChanged="Categories_SelectionChanged"
                                StaysOpenOnEdit="True"
                                Style="{StaticResource ModernComboBox}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox
                                            Click="CheckBox_Click"
                                            Content="{Binding CategoryName}"
                                            IsChecked="{Binding IsSelect, Mode=TwoWay}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <!--  Status  -->
                        <StackPanel Grid.Column="2">
                            <Label
                                Margin="0,0,0,8"
                                Content="Status *"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="#333333" />
                            <ComboBox
                                x:Name="StatusComboBox"
                                Height="40"
                                VerticalContentAlignment="Center"
                                Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="Ongoing" IsSelected="True" />
                                <ComboBoxItem Content="Completed" />
                                <ComboBoxItem Content="Hiatus" />
                                <ComboBoxItem Content="Cancelled" />
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <!--  Description  -->
                    <Label
                        Margin="0,20,0,8"
                        Content="Description"
                        FontSize="13"
                        FontWeight="Medium"
                        Foreground="#333333" />
                    <TextBox
                        x:Name="DescriptionTextBox"
                        Height="210"
                        VerticalContentAlignment="Top"
                        AcceptsReturn="True"
                        Style="{StaticResource ModernTextBox}"
                        Text="Enter a description of the series"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto" />

                    <!--  Buttons  -->
                    <StackPanel
                        Margin="0,30,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Margin="0,0,10,0"
                            Click="Cancel_Click"
                            Content="Cancel"
                            Style="{StaticResource SecondaryButton}" />
                        <Button
                            Click="CreateSeries_Click"
                            Content="Create Series"
                            Style="{StaticResource PrimaryButton}" />
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>

        </Grid>
    </Border>
</UserControl>

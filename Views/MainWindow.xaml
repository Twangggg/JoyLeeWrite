<Window
    x:Class="JoyLeeBookWriter.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="JoyLeeWrite"
    Width="1000"
    Height="600"
    Background="#F5F5F5"
    Icon="H:/C#Code/JoyLeeWrite/Resources/img/header_logo.png">
    <Window.Resources>
        <!--  Styles  -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Margin="3,5,3,5"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F3F4F6" />
                            </Trigger>
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="border" Property="Background" Value="#EFF8FF" />
                            </Trigger>
                            <DataTrigger Binding="{Binding ContextMenu.IsOpen, RelativeSource={RelativeSource Self}}" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EFF8FF" />
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#DDD"
                            BorderThickness="1"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="border" Property="Background" Value="#EFF8FF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NewStoryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2563EB" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="15,12" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#666" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="15,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Margin="5,2"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style
            x:Key="SelectedChapterStyle"
            BasedOn="{StaticResource SidebarButtonStyle}"
            TargetType="Button">
            <Setter Property="Background" Value="#E0E7FF" />
            <Setter Property="Foreground" Value="#2563EB" />
        </Style>

        <Style x:Key="AIButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#8B5CF6" />
                        <GradientStop Offset="1" Color="#EC4899" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="60" />
            <Setter Property="Height" Value="60" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="15"
                        Opacity="0.4"
                        ShadowDepth="0"
                        Color="#8B5CF6" />
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="30">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect
                                BlurRadius="20"
                                Opacity="0.6"
                                ShadowDepth="0"
                                Color="#8B5CF6" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ToggleSidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#DDD" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Width" Value="50" />
            <Setter Property="Height" Value="50" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F8F8" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <DropShadowEffect
            x:Key="DropShadowEffect"
            BlurRadius="10"
            Direction="270"
            ShadowDepth="2"
            Color="#22000000" />
        <Style x:Key="ColorButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#CCCCCC" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Focusable" Value="False" />
            <Setter Property="IsTabStop" Value="False" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <!--  Hover effect  -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#333333" />
                                <Setter TargetName="border" Property="BorderThickness" Value="2" />
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect
                                            BlurRadius="8"
                                            Opacity="0.4"
                                            ShadowDepth="2"
                                            Color="Black" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!--  Pressed effect  -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ModernContextMenu" TargetType="ContextMenu">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#E5E7EB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="HasDropShadow" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="16"
                                    Direction="270"
                                    Opacity="0.1"
                                    ShadowDepth="4"
                                    Color="#000000" />
                            </Border.Effect>
                            <StackPanel IsItemsHost="True" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Modern MenuItem Style  -->
        <Style x:Key="ModernMenuItem" TargetType="MenuItem">
            <Setter Property="Height" Value="36" />
            <Setter Property="Padding" Value="12,0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#1F2937" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border
                            x:Name="Border"
                            Margin="2"
                            Background="Transparent"
                            CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Icon  -->
                                <ContentPresenter
                                    Grid.Column="0"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    ContentSource="Icon" />

                                <!--  Header Text  -->
                                <ContentPresenter
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    ContentSource="Header"
                                    RecognizesAccessKey="True" />

                                <!--  Shortcut  -->
                                <TextBlock
                                    Grid.Column="2"
                                    Margin="24,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="#9CA3AF"
                                    Text="{TemplateBinding InputGestureText}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F3F4F6" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#D1D5DB" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Separator Style  -->
        <Style x:Key="ModernSeparator" TargetType="Separator">
            <Setter Property="Background" Value="#E5E7EB" />
            <Setter Property="Height" Value="1" />
            <Setter Property="Margin" Value="8,4" />
        </Style>


    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Top Menu Bar  -->
        <Border
            Grid.Row="0"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="0,0,0,1">
            <Grid Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Left Menu  -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Image
                        Width="220"
                        Height="80"
                        Margin="15,0,10,0"
                        VerticalAlignment="Center"
                        Source="H:/C#Code/JoyLeeWrite/Resources/img/logo.png" />

                    <Button
                        x:Name="FileButton"
                        Click="FileButton_Click"
                        Style="{StaticResource MenuButtonStyle}">
                        <Button.ContextMenu>
                            <ContextMenu
                                x:Name="FileMenu"
                                Closed="FileMenu_Closed"
                                Style="{StaticResource ModernContextMenu}">
                                <!--  New Story  -->
                                <MenuItem
                                    Click="NewStory_Click"
                                    Header="New Story"
                                    InputGestureText="Ctrl + N"
                                    Style="{StaticResource ModernMenuItem}">
                                    <MenuItem.Icon>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Text="➕" />
                                    </MenuItem.Icon>
                                </MenuItem>

                                <!--  Open Story  -->
                                <MenuItem
                                    Click="OpenStory_Click"
                                    Header="Open Story"
                                    InputGestureText="Ctrl + O"
                                    Style="{StaticResource ModernMenuItem}">
                                    <MenuItem.Icon>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Text="📂" />
                                    </MenuItem.Icon>
                                </MenuItem>

                                <Separator Style="{StaticResource ModernSeparator}" />

                                <!--  Save  -->
                                <MenuItem
                                    Click="Save_Click"
                                    Header="Save"
                                    InputGestureText="Ctrl + S"
                                    Style="{StaticResource ModernMenuItem}">
                                    <MenuItem.Icon>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Text="💾" />
                                    </MenuItem.Icon>
                                </MenuItem>

                                <!--  Export  -->
                                <MenuItem
                                    Click="Export_Click"
                                    Header="Export"
                                    Style="{StaticResource ModernMenuItem}">
                                    <MenuItem.Icon>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Text="⬇️" />
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </Button.ContextMenu>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="0,0,5,0" Text="📄" />
                            <TextBlock Text="File" />
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="0,0,5,0" Text="🏠" />
                            <TextBlock Text="Home" />
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="0,0,5,0" Text="❓" />
                            <TextBlock Text="Help" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!--  Editable Title  -->
                <TextBox
                    x:Name="TitleTextBox"
                    Grid.Column="1"
                    Width="220"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Arrow"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="#333"
                    GotFocus="TitleTextBox_GotFocus"
                    KeyDown="TitleTextBox_KeyDown"
                    LostFocus="TitleTextBox_LostFocus"
                    Text="Untitled Story"
                    TextAlignment="Left" />

                <!--  Settings Button  -->
                <Button
                    Grid.Column="2"
                    Margin="0,0,15,0"
                    Content="⚙️"
                    FontSize="18"
                    Style="{StaticResource MenuButtonStyle}" />
            </Grid>
        </Border>


        <!--  Main Content Area  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Left Sidebar  -->
            <Border
                x:Name="SidebarBorder"
                Grid.Column="0"
                Width="300"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,1,0">
                <DockPanel LastChildFill="True">
                    <!--  Header Top  -->
                    <Border
                        Padding="15,10,15,0"
                        BorderBrush="#E0E0E0"
                        DockPanel.Dock="Top">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Toggle Button  -->
                            <Button
                                Grid.Column="1"
                                Width="40"
                                Height="40"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Click="ToggleSidebar_Click"
                                Style="{StaticResource ToggleSidebarButtonStyle}">
                                <TextBlock x:Name="ToggleIcon" Text="&lt;" />
                            </Button>
                        </Grid>
                    </Border>

                    <!--  Nội dung chính  -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="SidebarContent" Margin="15">
                            <Button Margin="0,10,0,15" Style="{StaticResource NewStoryButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="0,0,5,0"
                                        FontSize="16"
                                        Text="+ " />
                                    <TextBlock Text="New Story" />
                                </StackPanel>
                            </Button>

                            <Button Margin="0,0,0,20" Style="{StaticResource SidebarButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="0,0,5,0"
                                        FontSize="14"
                                        Text="+ " />
                                    <TextBlock Text="New Chapter" />
                                </StackPanel>
                            </Button>

                            <TextBlock
                                Margin="10,10,0,10"
                                FontSize="12"
                                Foreground="#999"
                                Text="Stories" />

                            <Button
                                Background="#E0E7FF"
                                Foreground="#2563EB"
                                Style="{StaticResource SidebarButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="0,0,5,0" Text="📖 " />
                                    <TextBlock Text="Untitled Story 1" />
                                </StackPanel>
                            </Button>

                            <StackPanel Margin="15,5,0,0">
                                <Button Style="{StaticResource SelectedChapterStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Margin="0,0,5,0" Text="📄 " />
                                        <TextBlock Text="Chapter 1" />
                                    </StackPanel>
                                </Button>
                                <!--  Các Chapter khác  -->
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </Border>


            <!--  Toggle Button when Sidebar is Closed  -->
            <Button
                x:Name="ToggleButtonClosed"
                Grid.Column="1"
                Margin="10,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="ToggleSidebar_Click"
                Style="{StaticResource ToggleSidebarButtonStyle}"
                Visibility="Collapsed">
                <TextBlock Text="&gt;" />
            </Button>

            <!--  Right Panel: Toolbar + Editor  -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Toolbar  -->
                <Border
                    Grid.Row="0"
                    Padding="15,10"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,0,0,1">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <Button
                            Margin="5,0"
                            Command="{Binding ToggleBoldCommand}"
                            Content="B"
                            Focusable="False"
                            FontWeight="Bold"
                            IsTabStop="False"
                            Style="{StaticResource ToolbarButtonStyle}" />
                        <Button
                            Margin="5,0"
                            Command="{Binding ToggleItalicCommand}"
                            Content="I"
                            Focusable="False"
                            FontStyle="Italic"
                            IsTabStop="False"
                            Style="{StaticResource ToolbarButtonStyle}" />
                        <Button
                            Margin="5,0"
                            Command="{Binding ToggleUnderlineCommand}"
                            Focusable="False"
                            IsTabStop="False"
                            Style="{StaticResource ToolbarButtonStyle}">
                            <TextBlock Text="U" TextDecorations="Underline" />
                        </Button>
                        <Button
                            Margin="5,0"
                            Command="{Binding DownSizeCommand}"
                            Content="−"
                            Focusable="False"
                            IsTabStop="False"
                            Style="{StaticResource ToolbarButtonStyle}" />
                        <TextBlock
                            x:Name="FontSize"
                            Margin="10,0"
                            VerticalAlignment="Center"
                            FontSize="13"
                            Text="{Binding SelectedFontSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <Button
                            Margin="5,0"
                            Command="{Binding UpSizeCommand}"
                            Content="+"
                            Focusable="False"
                            IsTabStop="False"
                            Style="{StaticResource ToolbarButtonStyle}" />
                        <Grid>
                            <!--  Nút màu  -->
                            <Button
                                x:Name="ColorButton"
                                Width="40"
                                Height="40"
                                Click="ColorButton_Click"
                                Content="🎨"
                                Focusable="False"
                                IsTabStop="False"
                                Style="{StaticResource ToolbarButtonStyle}"
                                ToolTip="Chọn màu chữ" />
                            <!--  Popup chọn màu  -->
                            <Popup
                                x:Name="ColorPopup"
                                AllowsTransparency="True"
                                Focusable="False"
                                Placement="Bottom"
                                PlacementTarget="{Binding ElementName=ColorButton}"
                                PopupAnimation="Fade"
                                StaysOpen="False">
                                <Border
                                    Padding="10"
                                    Background="White"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Focusable="False">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="10"
                                            Opacity="0.3"
                                            ShadowDepth="2"
                                            Color="Black" />
                                    </Border.Effect>

                                    <StackPanel>
                                        <!--  Tiêu đề  -->
                                        <TextBlock
                                            Margin="0,0,0,8"
                                            Focusable="False"
                                            FontWeight="SemiBold"
                                            Foreground="#333333"
                                            Text="Chọn màu" />

                                        <!--  Color Picker chính  -->
                                        <xctk:ColorPicker
                                            x:Name="MainColorPicker"
                                            Width="200"
                                            Height="30"
                                            DisplayColorAndName="True"
                                            Focusable="False"
                                            IsTabStop="False"
                                            SelectedColor="{Binding SelectedFontColor, Mode=TwoWay}"
                                            ShowRecentColors="True"
                                            ShowStandardColors="True"
                                            UsingAlphaChannel="False" />

                                        <!--  Màu nhanh  -->
                                        <TextBlock
                                            Margin="0,10,0,5"
                                            Focusable="False"
                                            FontSize="11"
                                            Foreground="#666666"
                                            Text="Màu thường dùng" />

                                        <UniformGrid
                                            Margin="0,0,0,5"
                                            Columns="5"
                                            Rows="2">
                                            <Button
                                                Width="30"
                                                Height="30"
                                                Margin="2"
                                                Background="Black"
                                                BorderBrush="#CCCCCC"
                                                BorderThickness="1"
                                                Click="QuickColor_Click"
                                                Focusable="False"
                                                IsTabStop="False"
                                                Style="{StaticResource ColorButtonStyle}"
                                                Tag="#000000"
                                                ToolTip="Đen" />
                                            <Button
                                                Width="30"
                                                Height="30"
                                                Margin="2"
                                                Background="Red"
                                                BorderBrush="#CCCCCC"
                                                BorderThickness="1"
                                                Click="QuickColor_Click"
                                                Focusable="False"
                                                IsTabStop="False"
                                                Style="{StaticResource ColorButtonStyle}"
                                                Tag="#FF0000"
                                                ToolTip="Đỏ" />
                                            <Button
                                                Width="30"
                                                Height="30"
                                                Margin="2"
                                                Background="Blue"
                                                BorderBrush="#CCCCCC"
                                                BorderThickness="1"
                                                Click="QuickColor_Click"
                                                Focusable="False"
                                                IsTabStop="False"
                                                Style="{StaticResource ColorButtonStyle}"
                                                Tag="#0000FF"
                                                ToolTip="Xanh dương" />
                                            <Button
                                                Width="30"
                                                Height="30"
                                                Margin="2"
                                                Background="Green"
                                                BorderBrush="#CCCCCC"
                                                BorderThickness="1"
                                                Click="QuickColor_Click"

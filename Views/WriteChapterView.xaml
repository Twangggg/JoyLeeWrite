<Page
    x:Class="JoyLeeWrite.Views.WriteChapterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:JoyLeeWrite.Views"
    xmlns:vm="clr-namespace:JoyLeeWrite.ViewModels"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="JoyLeeWrite"
    Background="#F5F5F5">
    <Page.Resources>
        <Style x:Key="ToggleSidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#DDD" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Width" Value="50" />
            <Setter Property="Height" Value="50" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F8F8" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--  Existing Styles (giữ nguyên)  -->
        <Style x:Key="Custombutton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="275" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#DDD"
                            BorderThickness="1"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="border" Property="Background" Value="#EFF8FF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  All other existing styles here...  -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Margin="3,5,3,5"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F3F4F6" />
                            </Trigger>
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="border" Property="Background" Value="#EFF8FF" />
                            </Trigger>
                            <DataTrigger Binding="{Binding ContextMenu.IsOpen, RelativeSource={RelativeSource Self}}" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EFF8FF" />
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AIButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#8B5CF6" />
                        <GradientStop Offset="1" Color="#EC4899" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="60" />
            <Setter Property="Height" Value="60" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="15"
                        Opacity="0.4"
                        ShadowDepth="0"
                        Color="#8B5CF6" />
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="30">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect
                                BlurRadius="20"
                                Opacity="0.6"
                                ShadowDepth="0"
                                Color="#8B5CF6" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  🎨 NEW: AI Chat Box Styles  -->
        <Style x:Key="AIChatBoxStyle" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="30"
                        Direction="270"
                        Opacity="0.15"
                        ShadowDepth="5"
                        Color="#000000" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ChatMessageUserStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#8B5CF6" />
                        <GradientStop Offset="1" Color="#EC4899" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="18,18,4,18" />
            <Setter Property="Padding" Value="16,12" />
            <Setter Property="MaxWidth" Value="320" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>

        <Style x:Key="ChatMessageAIStyle" TargetType="Border">
            <Setter Property="Background" Value="#F3F4F6" />
            <Setter Property="CornerRadius" Value="18,18,18,4" />
            <Setter Property="Padding" Value="16,12" />
            <Setter Property="MaxWidth" Value="320" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>

        <Style x:Key="ChatInputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#F9FAFB" />
            <Setter Property="BorderBrush" Value="#E5E7EB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="16,12" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="24">
                            <ScrollViewer
                                x:Name="PART_ContentHost"
                                Margin="{TemplateBinding Padding}"
                                VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SendButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#8B5CF6" />
                        <GradientStop Offset="1" Color="#EC4899" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="44" />
            <Setter Property="Height" Value="44" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="QuickActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#E5E7EB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Foreground" Value="#6B7280" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F9FAFB" />
                    <Setter Property="BorderBrush" Value="#D1D5DB" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="9*" />
        </Grid.RowDefinitions>

        <!--  Top Menu Bar (giữ nguyên)  -->
        <Border
            Grid.Row="0"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="0,0,0,1">
            <Grid Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="5.5*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Image
                        x:Name="Logo"
                        Width="300"
                        Height="80"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Source="pack://application:,,,/Resources/img/logo.png" />
                </StackPanel>

                <Button
                    Grid.Column="1"
                    Width="25"
                    Height="25"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Click="ToggleSidebar_Click"
                    Style="{StaticResource ToggleSidebarButtonStyle}">
                    <Image
                        x:Name="SidebarIcon"
                        Width="20"
                        Height="20"
                        Source="pack://application:,,,/Resources/img/sidebar.png"
                        Stretch="Uniform" />
                </Button>

                <TextBlock
                    x:Name="TitleTextBox"
                    Grid.Column="2"
                    Margin="15,3,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    Cursor="Arrow"
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="#333"
                    Text="{Binding CurrentPageTitle}"
                    TextAlignment="Left" />

                <local:HeaderButtonView
                    Grid.Column="4"
                    DataContext="{Binding HeaderButtonVM}"
                    DockPanel.Dock="Right" />
            </Grid>
        </Border>

        <!--  Main Content Area  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Sidebar (giữ nguyên)  -->
            <Border
                x:Name="SidebarBorder"
                Width="300"
                Background="White"
                BorderBrush="#E5E7EB"
                BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Button
                        x:Name="BackSeries"
                        Grid.Column="0"
                        Width="270"
                        Height="40"
                        Click="BackToSeries_Click"
                        Style="{StaticResource ToggleSidebarButtonStyle}">
                        <TextBlock FontSize="16" Text="🡠 Back" />
                    </Button>

                    <ScrollViewer
                        x:Name="SidebarContent"
                        Grid.Row="1"
                        HorizontalScrollBarVisibility="Disabled"
                        VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,20,0,0">
                            <Button Command="{Binding NavigateToHomepageCommand}" Style="{StaticResource Custombutton}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="0,0,10,0" Text="📚" />
                                    <TextBlock Text="My Stories" />
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding NavigateToStaticspageCommand}" Style="{StaticResource Custombutton}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="0,0,10,0" Text="📊" />
                                    <TextBlock Text="Statistics" />
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding NavigateToProfilepageCommand}" Style="{StaticResource Custombutton}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="0,0,10,0" Text="⚙️" />
                                    <TextBlock Text="Settings" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>

                    <Border
                        Grid.Row="2"
                        Padding="15"
                        BorderBrush="#E5E7EB"
                        BorderThickness="0,1,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Border
                                Width="36"
                                Height="36"
                                Background="#3B82F6"
                                CornerRadius="18">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="A" />
                            </Border>
                            <TextBlock
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="13"
                                FontWeight="SemiBold"
                                Text="{Binding Username}" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!--  Right Panel  -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <local:EditorToolbarView DataContext="{Binding EditorToolbarVM}" DockPanel.Dock="Top" />

                <Border Grid.Row="1" Background="#F5F7FB">
                    <Grid>
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                            <local:WriteView DataContext="{Binding WriteVM}" DockPanel.Dock="Top" />
                        </ScrollViewer>

                        <!--  🎨 AI Chat Box (NEW)  -->
                        <Border
                            x:Name="AIChatBox"
                            Width="500"
                            Height="450"
                            Margin="0,0,50,130"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Style="{StaticResource AIChatBoxStyle}"
                            Visibility="Collapsed">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!--  Header  -->
                                <Border
                                    Grid.Row="0"
                                    Padding="20,16"
                                    Background="#FAFAFA"
                                    BorderBrush="#F0F0F0"
                                    BorderThickness="0,0,0,1"
                                    CornerRadius="16,16,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  AI Icon  -->
                                        <Border
                                            Grid.Column="0"
                                            Width="32"
                                            Height="32"
                                            CornerRadius="16">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Offset="0" Color="#8B5CF6" />
                                                    <GradientStop Offset="1" Color="#EC4899" />
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Text="✨" />
                                        </Border>

                                        <!--  Title  -->
                                        <StackPanel
                                            Grid.Column="1"
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Center">
                                            <TextBlock
                                                FontSize="15"
                                                FontWeight="SemiBold"
                                                Foreground="#111827"
                                                Text="AI Writing Assistant" />
                                            <TextBlock
                                                FontSize="11"
                                                Foreground="#9CA3AF"
                                                Text="Ask me anything about your story" />
                                        </StackPanel>

                                        <!--  Close Button  -->
                                        <Button
                                            Grid.Column="2"
                                            Width="32"
                                            Height="32"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="CloseAIChat_Click"
                                            Cursor="Hand">
                                            <TextBlock
                                                FontSize="18"
                                                Foreground="#6B7280"
                                                Text="✕" />
                                        </Button>
                                    </Grid>
                                </Border>

                                <!--  Chat Messages Area  -->
                                <ScrollViewer
                                    x:Name="ChatScrollViewer"
                                    Grid.Row="1"
                                    Padding="20"
                                    VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="ChatMessagesPanel">

                                        <!--  AI Welcome Message  -->
                                        <Border Margin="0,0,0,16" Style="{StaticResource ChatMessageAIStyle}">
                                            <TextBlock
                                                FontSize="14"
                                                Foreground="#374151"
                                                TextWrapping="Wrap">
                                                <Run Text="👋 Hello! I'm your AI writing assistant. I can help you with:" />
                                                <LineBreak />
                                                <LineBreak />
                                                <Run Text="• Brainstorming ideas" />
                                                <LineBreak />
                                                <Run Text="• Writing suggestions" />
                                                <LineBreak />
                                                <Run Text="• Grammar corrections" />
                                                <LineBreak />
                                                <Run Text="• Character development" />
                                                <LineBreak />
                                                <LineBreak />
                                                <Run Text="What would you like help with?" />
                                            </TextBlock>
                                        </Border>

                                    </StackPanel>
                                </ScrollViewer>


                                <!--  Input Area  -->
                                <Border
                                    Grid.Row="2"
                                    Padding="5,4"
                                    Background="White"
                                    CornerRadius="0,0,16,16">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBox
                                            x:Name="ChatInput"
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            KeyDown="ChatInput_KeyDown"
                                            Style="{StaticResource ChatInputStyle}"
                                            Text="Type your message..." />

                                        <Button
                                            Grid.Column="1"
                                            Margin="12,0,0,0"
                                            Click="SendMessage_Click"
                                            Command="{Binding CallAICommand}"
                                            Style="{StaticResource SendButtonStyle}">
                                            <TextBlock FontSize="18" Text="➤" />
                                        </Button>
                                    </Grid>
                                </Border>

                            </Grid>
                        </Border>

                        <!--  AI Assistant Floating Button  -->
                        <Button
                            x:Name="AIFloatingButton"
                            Margin="0,0,50,50"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Click="AIButton_Click"
                            Style="{StaticResource AIButtonStyle}"
                            ToolTip="Ask AI">
                            <TextBlock FontSize="26" Text="✨" />
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>